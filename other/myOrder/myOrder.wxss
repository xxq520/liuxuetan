/* pages/myOrder/myOrder.wxss */
.bor_left::after{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    border-left: solid 2rpx #e9a431;
}
.top_bg{
    height: 140rpx;
    background-color: #3b5370;
    position: relative;
}
.order_item{
    width: 690rpx;
	background-color: #ffffff;
	box-shadow: 3rpx 4rpx 27rpx 0rpx 
		rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    padding: 18rpx 30rpx 0rpx 30rpx;
    margin-top: 40rpx;

}
.current_order{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%);
    margin: 0;
}

.top_order_info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
}
.top_order_number{
    font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #8c8c8c;
    border-left:solid 2rpx #e9a431;
    padding-left: 10rpx;
}
.create_date{
    font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #8c8c8c;
}
.order_title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #333333;
    margin-bottom: 24rpx;
}
.order_title view{
    width: 78%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.order_title image{
    width: 12rpx;
	height: 22rpx;
}
.order_status{
    height: 77rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #ff301e;
    border-top: 1rpx solid  #eeeeee;
}
.complete-order{
    display: flex;
    justify-content: center;
    margin-top: 120rpx;
    padding-bottom: 100rpx;
}
.complete_color{
    color: #e9a431;
}
.order_title view{
    text-align: right;
}
.orderStatus{
	font-family: PingFang-SC-Bold;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #e9a431;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
	border: solid 1rpx #e9a431;
}
.noneDate{
	font-family: PingFang-SC-Bold;
	font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #3b526f !important;
}
.title{
    text-align: left !important;
}
.status_or{
    font-family: PingFang-SC-Bold;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #8c8c8c;
}
.red{
    font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ff301e;
}