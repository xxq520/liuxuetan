/* other/billManagement/billManagement.wxss */
page {
    background: #f5f5f5;
}

.top-option {
    white-space: nowrap;
    padding-left: 28rpx;
    overflow-x: scroll;
    background: #fff;
}

.option-item {
    margin-right: 60rpx;
    display: inline-block;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
    padding-bottom: 24rpx;
    position: relative;
}

.option-item:last-child {
    margin: 0;
}

.bor_bom::before {
    content: "";
    position: absolute;
    width: 50%;
    height: 4rpx;
    background: #e9a431;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
}

.current_ot {
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #3b5370;
}

.time-option {
    padding: 0 72rpx;
    padding-top: 16rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
}

.time-item {
    width: 280rpx;
    height: 50rpx;
    border-radius: 25rpx;
    border: solid 1rpx #dddddd;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
}

.time-item image {
    margin-left: 8rpx;
    width: 15rpx;
    height: 9rpx;
}

.separator {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
}

.trading-comprehensive {
    display: flex;
    background: #fff;
    padding: 60rpx 66rpx 36rpx 66rpx;
}

.trading-num {
    width: 50%;
    display: flex;
    flex-direction: column;
    font-size: 36rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #3b5370;
    padding-right: 10rpx;
}

.trading-title {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
    margin-bottom: 10rpx;
}

.trading-price {
    display: flex;
    flex-direction: column;
    width: 50%;
    font-size: 36rpx;
    font-weight: normal;
    letter-spacing: 0rpx;
    color: #e9a431;
    padding-left: 72rpx;
    border-left: solid 1rpx #dddddd;
}

.price-info {
    display: flex;
    align-items: baseline;
}

.price-font-icon {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #e9a431;
}

.top-bor {
    height: 12rpx;
    background-color: #e9e9e9;
    border-radius: 6rpx 6rpx 0 0;
    border-bottom: 4rpx solid #ddd;
    margin-bottom: 58rpx;
}

.trading-info-list {
    width: 90%;
    margin: 0 auto;
    background: #fff;
    margin-top: 20rpx;
}

.list-item {
    padding: 0 23rpx 30rpx 23rpx;
    border-bottom: solid 1rpx #dddddd;
    margin-bottom: 28rpx;
}

.list-item:last-child {
    border: none;
}

.list-item--childer-noe,
.list-item--childer-two,
.list-item--childer-three {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list-item--childer-noe {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #333333;
}

.list-item--childer-two {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
}

.list-item--childer-three {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ff301e;
}

.details-btn {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #333333;
}

.trading-complete {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #8c8c8c;
}

.withdrawal {
    width: 92%;
    height: 85rpx;
    background-color: #3b5370;
    border-radius: 10rpx;
    margin: 0 4%;
    margin-top: 120rpx;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.can-withdrawal-price {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #999999;
    margin-top: 20rpx;
    padding-left: 4%;
}

.picker {
    width: 100%;
    height: 364rpx;
    background: #fff;
    text-align: center;
}
.cover_container{
    flex-direction: column;
     justify-content: flex-end;
     align-items: stretch;
}
.operation{
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 35rpx;

}
.time-title{
    font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
}
.cancel,.determine{
    font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 42rpx;
	letter-spacing: 0rpx;
	color: #333333;
}