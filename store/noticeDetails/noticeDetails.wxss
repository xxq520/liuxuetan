/* store/noticeDetails/noticeDetails.wxss */
page{
    background: #f5f5f5;
}
.remind-matters{
    padding: 28rpx 38rpx 28rpx 30rpx;
    margin-top: 34rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
}
.remind-title{
    font-size: 38rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #e9a431;
}

.matters-texterea{
    width: 100%;
    margin-top: 20rpx;
    font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 42rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.btn-info{
    margin: 326rpx 0 100rpx 0;
    padding: 0 4%;
}
.return,.next-article{
    height: 85rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    margin-bottom: 40rpx;
}
.return{
    background-color: #3b5370;
    color: #ffffff;
}
.next-article{
    color: #8c8c8c;
    border: solid 1rpx #8c8c8c;
}
.time{
	font-family: PingFang-SC-Medium;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #8c8c8c;
    margin-top: 10rpx;
}
.matters-texterea{
    text-indent: 40rpx;
}