/* other/withdrawal/withdrawal.wxss */
page {
    background-color: #f5f5f5;
}

.withdrawal-WeChat {
    height: 140rpx;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #333333;
    padding: 0 30rpx;
    margin: 20rpx 0;
}

.withdrawal-WeChat image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.input-price {
    height: 182rpx;
    display: flex;
    align-items: baseline;
    border-bottom: solid 1rpx #dddddd;
    background-color: #fff;
}

.input-price text {
    font-size: 68rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #333333;
}

.input-price input {
    height: 100%;
    padding-left: 20rpx;
    font-size: 98rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ff301e;
}

.can-withdrawal-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #999999;
    padding: 24rpx 28rpx;
    background: #fff;
}

.all-withdrawal {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #e9a431;
}

.withdrawal-btn {
    margin: 200rpx 4% 0 4%;
    width: 92%;
    height: 85rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #3b5370;
    border-radius: 10rpx;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ffffff;
}
