
view{
    box-sizing: border-box;
}
/* 遮罩层 */
.cover_container{
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    z-index: 150;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: flex-end;
}
/* 文章行高，字体大小颜色 */
.context{
    font-size: 24rpx;
    color: #333333;
    line-height: 1.7;
}  
/* 文章行高，字体大小颜色 2 */
.context_two{
    font-size: 24rpx;
    color: #8c8c8c;
    line-height: 1.7;
}  
/* 文字四行超出隐藏 */
.line_4{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis; 
}
/* 文字2行超出隐藏 */
.line_2{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis; 
}
/* 文字一行益处隐藏 */
.line_1{
text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
    }
/* 文字四行超出隐藏 */
.line_3{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
/* 点击点赞或者其他等等字体颜色 */
.zt_color{
    color: #a6d9e1;
  }
  /* 给点击tab选项添加一个底边框 */
  .current_tab::before{
    content: "";
    position: absolute;
    bottom: -14rpx;
    left: 0;
    width: 100%;
	height: 2rpx;
    border-bottom: solid 4rpx #e9a431;
    
}
/* 当前点击的选项字体颜色 */
.current_color{
    color: #e9a431 !important;
}