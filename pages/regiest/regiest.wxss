}

.Already {
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 130rpx;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	letter-spacing: 0rpx;
	color: #999999;
}

.Already text:nth-child(1) {
  color: #e9a431;
}


.or {
  position: relative;
  text-align: center;
  width: 380rpx;
  font-size: 28rpx;
  margin: auto;
}

.or text {
  line-height: 20px;
  margin: auto;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
}

/*CSS伪类用法*/

.or text:after, .or text:before {
  position: absolute;
  top:50%;
  background: #ddd;
  content: "";
  height: 2rpx;
  width: 160rpx;
  opacity: 0.5;
}

/*调整背景横线的左右距离*/

.or text:before {
  left: 0;
}

.or text:after {
  right: 0;
}

