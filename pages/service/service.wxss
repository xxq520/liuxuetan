/* pages/discover/discover.wxss */
page{
    background-color: #fff;
}
.mrg_top_20{
    margin-top: 20rpx;
}
.filter{
  display: flex;
}
.van-dropdown-menu__title{
  width: 104rpx;
  height: 35rpx;
  background: #f5f5f6;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 35rpx

}
.van-dropdown-menu__title::after{
  right: 0
}
.top_search{
    height: 96rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 3%;
    align-items: center;
    background-color: #fff;
}
.logo{
    width: 109rpx;
	height: 59rpx;
}
.select{
    display: flex;
    align-items: center;
    font-size: 32rpx;
	color: #333333;
}
.select image{
	width: 17rpx;
	height: 10rpx;
    margin-left: 20rpx;
}
.search_btn{
    width: 28rpx;
	height: 32rpx;
}
.roll_nav{
    height: 65rpx;
    background-color: #3b5370;
    overflow-x: scroll;
    white-space: nowrap;
    padding: 0 25rpx;
}
.nav_item{
    display: inline-block;
    margin: 0 28rpx;
    font-size: 26rpx;
    color: #ffffff;
    height: 100%;
    line-height: 65rpx;
    position: relative;
    border-bottom: 1px solid transparent;
}
.current_color{
    color: #e9a431 !important;
    border-bottom: 1px solid #e9a431;
}
.hot_search{
  display: flex;
  padding: 30rpx 20rpx;
  
}
.search { 
  position: relative;
}
.search input{ 
  width: 550rpx;
  height: 63rpx;
  border-radius: 63rpx;
  background-color: #f5f5f5;
  font-size: 27rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.search image{ 
  width: 32rpx;
  height: 34rpx;
  position: absolute;
  right: 26rpx;
  top: 12rpx;
}